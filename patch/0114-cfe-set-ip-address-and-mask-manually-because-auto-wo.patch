---
 .../src/cfe/cfe/arch/common/board/bcm947xx/src/bcm947xx_devs.c  | 2 +-
 1 file changed, 1 insertion(+), 1 deletion(-)

diff --git a/release/src-rt-7.14.114.x/src/cfe/cfe/arch/common/board/bcm947xx/src/bcm947xx_devs.c b/release/src-rt-7.14.114.x/src/cfe/cfe/arch/common/board/bcm947xx/src/bcm947xx_devs.c
index a75616c86d..50aae96717 100644
--- a/release/src-rt-7.14.114.x/src/cfe/cfe/arch/common/board/bcm947xx/src/bcm947xx_devs.c
+++ b/release/src-rt-7.14.114.x/src/cfe/cfe/arch/common/board/bcm947xx/src/bcm947xx_devs.c
@@ -952,7 +952,7 @@ board_final_init(void)
 			sprintf(buf, "ifconfig eth0 -addr=%s -mask=%s",
 			        addr, mask);
 		else
-			sprintf(buf, "ifconfig eth0 -auto");
+			sprintf(buf, "ifconfig eth0 -addr=192.168.1.1 -mask=255.255.255.0");
 
 		res = ui_docommand(buf);
 
