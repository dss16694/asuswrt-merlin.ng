Subject: [PATCH 080/122] www: fix bug that take too long to restart without
 changing sw_mode_radio.

Signed-off-by: Rokis <ghost1988102@gmail.com>
---
 release/src/router/www/Advanced_System_Content.asp | 3 ++-
 1 file changed, 2 insertions(+), 1 deletion(-)

diff --git a/release/src/router/www/Advanced_System_Content.asp b/release/src/router/www/Advanced_System_Content.asp
index ed67dbda5c..8b82bf366d 100644
--- a/release/src/router/www/Advanced_System_Content.asp
+++ b/release/src/router/www/Advanced_System_Content.asp
@@ -551,7 +551,8 @@ function applyRule(){
 			ncb_enable_option_flag = true;
 		}
 
-		if((document.form.sw_mode_radio.value==1 && sw_mode!=3) ||
+		if(document.getElementById("sw_mode_radio_tr").style.display != "none" &&
+			(document.form.sw_mode_radio.value==1 && sw_mode!=3) ||
 			(document.form.sw_mode_radio.value==0 && sw_mode==3) ){
 			if (sw_mode == 1) document.form.sw_mode.value = 3;
 			else if (sw_mode == 3) document.form.sw_mode.value = 1;
